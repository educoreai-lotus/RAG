{
  "name": "rag-microservice-backend",
  "version": "1.0.0",
  "description": "EDUCORE - Contextual Assistant (RAG / Knowledge Graph) Microservice - Backend",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node scripts/start-with-migrations.js",
    "start:only": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "db:migrate": "prisma migrate dev --schema=../DATABASE/prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=../DATABASE/prisma/schema.prisma",
    "db:generate": "prisma generate --schema=../DATABASE/prisma/schema.prisma",
    "db:seed": "node ../DATABASE/prisma/seed.js",
    "db:studio": "prisma studio --schema=../DATABASE/prisma/schema.prisma",
    "proto:generate": "node scripts/generate-proto.js"
  },
  "keywords": [
    "rag",
    "microservice",
    "knowledge-graph",
    "educore",
    "backend"
  ],
  "author": "EDUCORE Team",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.10.0",
    "@grpc/proto-loader": "^0.7.11",
    "@prisma/client": "^5.8.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "openai": "^4.20.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prisma": "^5.8.0",
    "@playwright/test": "^1.40.0",
    "supertest": "^6.3.3"
  },
  "prisma": {
    "seed": "node ../DATABASE/prisma/seed.js"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}




